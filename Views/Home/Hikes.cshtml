@model IEnumerable<OregonHikes3.Models.Hike>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Hikes and Trail Reviews";
}

<body>
    <div class="panel-body">
        <h1>@ViewData["Title"]</h1>

        <table class="table table-sm table-responsive table-striped table-bordered">
            <thead>
                <tr>
                    <th>TrailName</th>
                    <th>Region</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (OregonHikes3.Models.Hike h in Model)
                {
                    <tr>
                        <td>@h.TrailName</td>
                        <td>@h.Region</td>
                        <td>@h.Description</td>
                        <td><a asp-action="HikeDetail" asp-route-trailName="@h.TrailName">Click here!</a></td>
                    </tr>
                   
                }


            </tbody>
        </table>
    </div>

</body>


